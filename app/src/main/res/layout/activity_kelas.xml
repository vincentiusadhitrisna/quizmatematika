<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".KelasActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:drawable/dialog_holo_light_frame" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas 1"
            android:id="@+id/btnkel1"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/btnkel2"
            android:layout_alignStart="@+id/btnkel2"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas 2"
            android:id="@+id/btnkel2"
            android:layout_below="@+id/btnkel1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kelas 3"
            android:id="@+id/btnkel3"
            android:layout_below="@+id/btnkel2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kelas 4"
            android:id="@+id/btnkel4"
            android:layout_below="@+id/btnkel3"
            android:layout_alignLeft="@+id/btnkel3"
            android:layout_alignStart="@+id/btnkel3"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kelas 5"
            android:id="@+id/btnkel5"
            android:layout_below="@+id/btnkel4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kelas 6"
            android:id="@+id/btnkel6"
            android:layout_below="@+id/btnkel5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

    </RelativeLayout>
</RelativeLayout>
